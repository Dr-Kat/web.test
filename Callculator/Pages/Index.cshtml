@page

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div align="center">
        <div style="width:500px; height:280px; border:double">
            <br>Login to the client calculator. Welcome!<br><br>
            <table>
                <tr>
                    <th class="user">User:</th>
                    <td>
                        <input id="login" />
                    </td>
                </tr>
                <tr>
                    <th class="pass">Password:</th>
                    <td>
                        <input type="password" id="password" />
                    </td>
                    <td style="width: 100px">
                        <span onmouseover="show()" onmouseout="hide()">&#x1F441;</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="right">
                        <button onclick="Login()" title="Login" id="loginBtn">Login</button>
                        <button onclick="RemindPassword()" title="remind" id="remindBtn">Remind pasword</button>
                    </td>
                </tr>
                <tr>
                    <th style="color: red" id="errorMessage" colspan="3"></th>
                </tr>
                <tr>
                    <td colspan="3">
                        <iframe id="remindPasswordView" hidden src="RemindPassword.html" style="height:130px"></iframe>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">
    show = function() {
        document.getElementById('password').type = "text";
    }

    hide = function() {
        document.getElementById('password').type = "password";
    }

    Login = function () {
        var correctPass = 'newyork1';
        var correctUser = 'test';

        var login = document.getElementById('login').value.toLowerCase();
        var password = document.getElementById('password').value;

        if (login === correctUser && password === correctPass) {
            window.location.href = window.location = 'Deposit';
        }

        if (login.trim() === '' || password.trim() === '') {
            ShowError("User name and password cannot be empty!");
            return;
        }

        if (login === correctUser && password !== correctPass) {
            ShowError("Incorrect password!");
            return;
        }

        if (login !== correctUser && password === correctPass) {
            ShowError("Incorrect user name!");
            return;
        }

        if (login !== correctUser && password !== correctPass) {
            ShowError("'" + login + "' user doesn't exist!");
            return;
        }
    }

    RemindPassword = function () {
        document.getElementById('remindPasswordView').hidden = false;
    }

    ShowError = function(error) {
        document.getElementById('errorMessage').textContent = error;
    }
</script>